<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home">

    <TextView android:text="Accelerometer Vibration Detection"
        android:id="@+id/TV_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"

        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BUT_Record"
        android:text="Record Vibrations"

        android:layout_below="@id/TV_title"
        android:onClick="RecordOnClick"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BUT_ViewRecordings"
        android:text="View Recordings"

        android:layout_below="@id/BUT_Record"
        android:onClick="ViewOnClick"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BUT_LiveDetection"
        android:text="Live Fall Detection"

        android:layout_below="@id/BUT_ViewRecordings"
        android:onClick="LiveOnClick"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/BUT_EraseRecordings"
        android:text="Erase File"
        android:onClick="EraseRecordingOnClick"


        android:layout_below="@id/BUT_LiveDetection"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/BUT_EmailRecordings"
        android:text="Send recordings as email"
        android:onClick="EmailOnClick"

        android:layout_alignParentBottom="true"
        />







</RelativeLayout>
